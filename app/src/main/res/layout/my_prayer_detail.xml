<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/prayerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:text="Prayer Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/prayerTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prayerNameTextView"
        android:layout_alignBottom="@+id/prayerNameTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:text="Prayer Time"
        android:textSize="24sp" />
</RelativeLayout>